/* 首页样式文件 */

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #060d2c;
  color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 顶部状态栏样式 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: rgba(30, 49, 99, 0.5);
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.status-label {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-bottom: 4rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
}

.status-value.normal {
  color: #4cd964;
}

.status-value.warning {
  color: #ff3b30;
}

/* 卡片容器样式 */
.card-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  flex: 1;
  overflow-y: auto;
}

/* 通用卡片样式 */
.card {
  border-radius: 16rpx;
  background-color: rgba(30, 49, 99, 0.5);
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.card-content {
  padding: 8rpx 0;
}

/* 信息行样式 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.info-label {
  color: #8a8a8a;
}

.info-value {
  font-weight: 500;
}

.info-value.normal {
  color: #4cd964;
}

.info-value.warning {
  color: #ff3b30;
}

.info-value.charging {
  color: #00a8ff;
}

.info-value.trend-up {
  color: #ff9500;
}

.info-value.trend-down {
  color: #4cd964;
}

.info-value.trend-stable {
  color: #8a8a8a;
}

/* 电池卡片样式 */
.battery-card {
  background: linear-gradient(135deg, rgba(30, 49, 99, 0.7), rgba(20, 30, 70, 0.7));
}

.battery-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.battery-visual {
  flex: 1;
  height: 30rpx;
  background-color: #333;
  border-radius: 15rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.battery-level {
  height: 100%;
  background: linear-gradient(90deg, #00a8ff, #4cd964);
  border-radius: 15rpx;
  transition: width 0.5s ease;
}

.battery-percentage {
  font-size: 32rpx;
  font-weight: bold;
  min-width: 80rpx;
  text-align: right;
}

/* 太阳能卡片样式 */
.solar-card {
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.2), rgba(30, 49, 99, 0.7));
}

.solar-power {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.power-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 8rpx;
  color: #ff9500;
}

.power-unit {
  font-size: 28rpx;
  color: #8a8a8a;
}

/* 天气卡片样式 */
.weather-card {
  background: linear-gradient(135deg, rgba(0, 168, 255, 0.2), rgba(30, 49, 99, 0.7));
}

.weather-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.weather-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weather-type {
  font-size: 28rpx;
  color: #8a8a8a;
  margin-top: 4rpx;
}

.weather-temp {
  display: flex;
  align-items: baseline;
}

.temp-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #00a8ff;
}

.temp-unit {
  font-size: 28rpx;
  color: #8a8a8a;
  margin-left: 4rpx;
}

/* 电网状态卡片样式 */
.grid-card {
  background: linear-gradient(135deg, rgba(142, 142, 147, 0.2), rgba(30, 49, 99, 0.7));
}

.grid-status {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.status-indicator {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.status-indicator.connected {
  background-color: rgba(76, 217, 100, 0.2);
  color: #4cd964;
}

.status-indicator.disconnected {
  background-color: rgba(255, 59, 48, 0.2);
  color: #ff3b30;
}

/* 能源消耗卡片样式 */
.energy-card {
  background: linear-gradient(135deg, rgba(88, 86, 214, 0.2), rgba(30, 49, 99, 0.7));
}

.energy-consumption {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.consumption-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #5856d6;
  margin-right: 8rpx;
}

.consumption-unit {
  font-size: 28rpx;
  color: #8a8a8a;
}

/* 底部操作栏样式 */
.action-bar {
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}

.action-button {
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
}

.refresh-button {
  background-color: #4a90e2;
  color: #fff;
}

.test-button {
  background-color: #f5a623;
  color: #fff;
}

.share-button {
  background-color: #2ecc71;
  color: #fff;
}

.button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 状态颜色 */
.normal {
  color: #4cd964;
}

.warning {
  color: #ff3b30;
}

.charging {
  color: #00a8ff;
}

/* 更新时间 */
.update-time {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 20rpx;
  text-align: right;
}

/* 加载中提示 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 100%;
}

.loading-text {
  color: var(--primary-color);
  font-size: 28rpx;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  width: 100%;
}

.error-text {
  color: var(--warning-color);
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.retry-button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
} 